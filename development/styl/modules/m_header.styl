.m_header
  position relative
  z-index 1
  height 55px
  line-height 55px
  background #fff
  box-shadow 0 0 5px rgba(0,0,0,.25)
  @media screen and (min-width: sm)
    height 80px
    line-height 80px
  .left
    float left
  .right
    float right
  .left,
  .right
    clearfix()
  .slogan,
  .user-fav span,
  .user-signin span
    display none
  .slogan
    @media screen and (min-width: md)
      display inline-block
      font-size 16px
      vertical-align middle
      margin-left 10px
    @media screen and (min-width: lg)
      margin-left 45px
  .hamburger
    display inline-block
    vertical-align middle
    width 20px
    height 16px
    position relative
    margin 0 auto
    transform rotate(0deg)
    transition .5s ease-in-out
    cursor pointer
    span
      display block
      position absolute
      height 4px
      width 100%
      background #a0a0a0
      border-radius 3px
      opacity 1
      left 0
      transform rotate(0deg)
      transition .25s ease-in-out
      &:nth-child(1)
        top 0
      &:nth-child(2)
        top 6px
      &:nth-child(3)
        top 12px
    &.open
      span
        &:nth-child(1)
          transform rotate(135deg) translate(5px, -5px)
        &:nth-child(2)
          opacity 0
          transform translateX(-10px)
        &:nth-child(3)
          transform rotate(-135deg) translate(3.5px, 3.5px)

  .logo
    width 44px
    height 100%
    line-height 51px
    float left
    @media screen and (min-width: 480px)
      width 190px
    @media screen and (min-width: sm)
      width 253px
      height 44px
      margin-top 16px
    a
      display inline-block
      vertical-align middle
      height 44px
      width 100%
      background url("../images/logo.png") no-repeat 0 0
      @media screen and (min-width: 480px)
        background-size contain
        background-position center center
      @media screen and (min-width: sm)
        display block


  .post-new
    float left
    margin-right 10px
    @media screen and (min-width: lg)
      margin-right 50px
    i
      display none
    a
      display inline-block
      vertical-align middle
      height 28px
      line-height 28px
      padding-left 3px
      padding-right 3px
      font-size 12px
      text-decoration none
      color #fff
      border-radius $radius
      gradient-green()
      @media screen and (min-width: sm)
        height 36px
        line-height 36px
        padding-left 15px
        padding-right 15px
        font-size 14px
        i
          display inline-block
          vertical-align middle
          font-size 22px
          position relative
          top -1px
          margin-right 5px
  .user-mobile-menu
    @media screen and (min-width: sm)
      display none
  .user-mobile-menu,
  .user-signin
  .user-fav
    float left
    margin-left 7px
    @media screen and (min-width: 480px)
      margin-left 13px
    @media screen and (min-width: lg)
      margin-left 35px
    i
      display inline-block
      vertical-align middle
  .user-fav
    i
      font-size 22px
      color #a0a0a0
    @media screen and (min-width: sm)
      span
        display inline-block
        vertical-align middle
        color $link
        text-decoration underline
  .user-signin
    margin-left 0
    i
      font-size 22px
      color #a0a0a0
    @media screen and (min-width: sm)
      span
        display inline-block
        vertical-align middle
        color $link
        text-decoration underline
        margin-left 2px
    @media screen and (min-width: lg)
      float right
      margin-left 35px
  @media screen and (min-width: sm)
    .user-fav,
    .user-signin
      &:hover,
      &:focus
        a
          text-decoration none
        span
          text-decoration none
        i
          color $orange