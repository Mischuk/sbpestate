.m_object-carousel
  margin-bottom 30px
  > .row
    @media screen and (min-width: 1200px)
      margin-left 0
      margin-right 0
  .slider-for
    height 295px
    width 100%
    margin-bottom 10px
    @media screen and (min-width: 1200px)
      height 500px
    .slide
      height 295px
      width 100%
      @media screen and (min-width: 1200px)
        height 500px
    .image
      display block
      width 100%
      height 100%
      background-position 50% 50%
      background-repeat no-repeat
      background-size cover
  .slider-nav
    position relative
    padding-left 25px
    padding-right 25px
    padding-bottom 10px
    border-bottom 1px solid $border
    @media screen and (min-width: 1200px)
      padding-bottom 15px
    .slick-arrow
      top 15px
      width 25px
      height 25px
      background #fff
      border 2px solid #a0a0a0
      &:hover, &:focus
        color $link
        border-color $link
        i:before
          color $link
      i
        &:before
          font-size 12px
      &.slick-prev
        left -5px
        i:before
          position relative
          left 0
          top 0
      &.slick-next
        right -5px
        i:before
          position relative
          left 1px
          top -2px
    .slide
      height 60px
      margin-left 5px
      margin-right 5px
      @media screen and (min-width: 1200px)
        margin-left 8px
        margin-right 8px
      &.slick-current
        position relative
        &:after
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          border 3px solid $link
      .image
        display block
        width 100%
        height 100%
        background-repeat no-repeat
        background-position 50% 50%
        background-size cover