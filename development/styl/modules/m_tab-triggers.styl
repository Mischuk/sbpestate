.m_tab-triggers
  display block
  width 100%
  cursor default
  text-align center
  margin-bottom 20px
  @media screen and (min-width: 768px)
    display inline-block
    vertical-align middle
    text-align left
    width auto
    margin-top 20px
  a
    position relative
    display inline-block
    vertical-align middle
    height 28px
    line-height 28px
    margin-left 0
    margin-right 0
    border-radius $radius
    padding-left 10px
    padding-right 10px
    font-size 14px
    color $text
    gradient-gray()
    &:first-child
      margin-left 0
    &:before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      border 1px solid #dcdcdc
      border-radius $radius
    &.current
      gradient-blue()
      color #fff
      &:before
        opacity 0
    @media screen and (min-width: 768px)
      margin-left 30px
      &:first-child
        margin-left 30px
    i
      font-style normal
      &.normal
        display none
        @media screen and (min-width: 768px)
          display block
      &.short
        display block
        @media screen and (min-width: 768px)
          display none
