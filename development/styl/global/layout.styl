/*!=========================
      Base grid styles
==========================*/
html
  position relative
  min-height 100%
body
  regular()
  font-size 15px
  line-height 1.35
  color $text
  background #fff
  @media screen and (min-width: md)
    margin-bottom 420px
.m_footer
  background-color $dark-blue
  @media screen and (min-width: md)
    position absolute
    left 0
    bottom 0
    width 100%
    height 420px
.container-fluid
  max-width 1170px

.visible-320
  @media screen and (min-width: 480px)
    display none
.hidden-320
  display none
  @media screen and (min-width: 480px)
    display block
.col-568-6
  @media screen and (min-width: 568px) and (max-width: 767px)
    float left
    width 50%